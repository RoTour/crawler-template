{
  "compilerOptions": {
    "target": "esnext",
    "module": "CommonJS",
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist"
  },
  "include": [
    "src/**/*.ts",
    "src/*.ts",
    "src/models/*.ts",
    "src/pages/*",
    ".eslintrc.js",
  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "files": true
  }
}

